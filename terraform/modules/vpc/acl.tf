# ------------------------------------------------------------------------
# Default Network ACL
# ------------------------------------------------------------------------
resource "aws_default_network_acl" "anf_default" {
  default_network_acl_id = "${aws_vpc.anf_vpc.default_network_acl_id}"

  ingress {
    protocol   = -1
    rule_no    = 100
    action     = "allow"
    cidr_block = "0.0.0.0/0"
    from_port  = 0
    to_port    = 0
  }

  egress {
    protocol   = -1
    rule_no    = 100
    action     = "allow"
    cidr_block = "0.0.0.0/0"
    from_port  = 0
    to_port    = 0
  }

  tags = merge(local.common_tags, {
    Name = "${var.project_name}-default-network-acl"
  })
}


